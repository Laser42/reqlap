<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Reqlap.Views.RequestView">

	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
		<ComboBox x:Name="HttpMethodComboBox">
			<!-- Варианты выбора будут добавлены динамически -->
		</ComboBox>
		<TextBox x:Name="UriTextBox" Margin="0,10,0,0"/>
		<Button x:Name="SendButton" Content="Send" Click="SendRequestButton_Click" Margin="0,10,0,0"></Button>
		<TextBox x:Name="RequestBodyTextBox" Width="300" Height="150" TextWrapping="Wrap" AcceptsReturn="True"  Margin="0,10,0,0"/>
	</StackPanel>
</UserControl>
