<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Reqlap.ViewModels"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Reqlap.Views.RequestView"
			 x:DataType="vm:MainViewModel">

	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
		<ComboBox x:Name="HttpMethodComboBox">
			<ItemsControl ItemsSource="{Binding HttpMethods}">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<ComboBoxItem Content="{Binding Method}"></ComboBoxItem>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</ComboBox>
		<TextBox x:Name="UriTextBox" Margin="0,10,0,0"/>
		<Button x:Name="SendButton" Content="Send" Click="SendRequestButton_Click" Margin="0,10,0,0"></Button>
		<TextBox x:Name="RequestBodyTextBox" Width="300" Height="150" TextWrapping="Wrap" AcceptsReturn="True"  Margin="0,10,0,0"/>
		<TextBox x:Name="ErrorTextBox" Margin="0,10,0,0"></TextBox>
	</StackPanel>
</UserControl>
